<div class="row" id="employee-main-block">
	<div class="col-md-12"  id="employee-seach-box">
		<div class="col-md-offset-3 col-md-6 custom-well">
			<%=form_tag search_employees_path, remote: true, method: :get, id: 'look-up-employee-form' do %>
			<div class="form-group look-up-friend col-md-7">
				<%= text_field_tag :search_params, params[:search_params], placeholder: 'Name, user id, email, mobile number', class: 'form-control input-lg', autofocus: true %>
			</div>
			<div class="form-group look-up-friend col-md-5">
				<%=button_tag(type: :submit, class: 'btn btn-lg btn-success look-sub-btn') do %>
					<span id="search-employee-cont"><i class="fa fa-search" aria-hidden="true"></i> Search</span>
					<span id="spin-employee-lookup"><i class="fa fa-cog fa-spin fa-lg" aria-hidden="true"></i> Searching...</span>
				<% end %>
				<%= link_to '<i class="fa fa-times fa-lg" aria-hidden="true"></i>'.html_safe, employee_details_path, class: "btn btn-lg btn-danger close-lookup" %>
			</div>
			<% end %>
		</div>
		<div class="col-md-12">
			<hr/>
		</div>
	</div>	

<% if @employee %> 
	<% if @employee.size > 0 %>
		<div class="col-lg-12" id="employee-lookup-results">
			 <div class="table-responsive resp-table">
			  <table class="table table-striped customer-list-table">
			    <thead>
			      <tr>
			        <th>User Id</th>
			        <th>Employee Id</th>
			        <th></th>
			      </tr>
			    </thead>
			    <tbody>
			      <% @employee.each do |employee| %>
			        <tr>
			          <td><%= employee.name %></td>
			          <td><%= employee.emp_id %></td>
			          <td><%=link_to 'See details', employee_detail_path(employee), class: "btn btn-sm btn-success cust-see-detail-btn" %></td>
			        </tr>
			      <% end %>
			    </tbody>
			  </table>
			</div>
		</div>
	<% else %>
		<div class="col-lg-12">
			<p> No search criteria matches</p>	
		</div>
		
	<% end %>
<% end %>
<div class="col-md-12" id="employee-lookup-errors"></div>
</div>